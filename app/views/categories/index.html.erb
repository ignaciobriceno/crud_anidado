<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="bg-warning">
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category%></td>
        <td><%= category.products.count %></td>
        <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Edit', edit_category_path(category) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

