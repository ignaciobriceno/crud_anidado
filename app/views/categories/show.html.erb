<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<%= form_with(model: [ @category, @product ]) do |form| %>
<%= form.text_field :name %>
<%= form.number_field :price %>
<%= form.submit :Enviar %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.products.each do |product| %>
      <tr>
        <td><%= product.name %> <%= link_to "x", category_product_path(@category, product), method: :delete %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
